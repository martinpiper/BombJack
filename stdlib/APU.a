!zn

APU_ResetDisable
	jsr Bus24Bit_SetAddressAPURegisters
	lda #%00
	sta CIA2PortBRS232
	lda #%01
	sta CIA2PortBRS232
	rts


APU_Enable
	jsr Bus24Bit_SetAddressAPURegisters
	lda #%11
	sta CIA2PortBRS232
	rts


Bus24Bit_SetAddressAPURegisters
	jsr Bus24Bit_Reset
	lda #kBus24Bit_APU_EBBS
	sta CIA2PortBRS232
	lda #$00
	sta CIA2PortBRS232
	lda #>kBus24Bit_APU_Control
	sta CIA2PortBRS232
	rts


Bus24Bit_SetAddressAPUInstructions
	jsr Bus24Bit_Reset
	lda #kBus24Bit_APU_EBBS
	sta CIA2PortBRS232
	lda #$00
	sta CIA2PortBRS232
	lda #>kBus24Bit_APU_Instructions
	sta CIA2PortBRS232
	rts


Bus24Bit_SetAddressAPUData
	jsr Bus24Bit_Reset
	lda #kBus24Bit_APU_EBBS
	sta CIA2PortBRS232
	lda #$00
	sta CIA2PortBRS232
	lda #>kBus24Bit_APU_Data
	sta CIA2PortBRS232
	rts

